<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chooseLeftRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <ImageView
        android:id="@+id/chosenImage"
        android:layout_width="300dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/eye_loader"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/predict_text"
        android:layout_below="@+id/chosenImage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:gravity="center"
        android:text="Choose Left Eye image"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        />



    <Button
        android:id="@+id/select_image"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="Choose Image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/predict_text"
        android:layout_marginTop="80dp"
        android:textColor="@color/loader_color"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="Next"
        android:textColor="@color/loader_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/select_image"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        />


</RelativeLayout>
    </ScrollView>
</LinearLayout>